[general]
# Ignore all merge commits as their messages are often auto-generated.
ignore-merge-commits = true
ignore = T3, T5, B2
verbosity = 2
regex-style-search = true

[title-match-regex]
# Custom title regex to enforce Conventional Commits pattern (e.g., "feat: add new feature")
regex = ^(feat|debug|docs|style|refactor|test|chore|init|revert)(.*)

[ignore-by-title]
# Match commit titles starting with "WIP" or "Attempt"
regex=^(WIP|Attempt|Release)(.*)
ignore=all

[ignore-by-body]
# Match commits message bodies that have a line that contains 'release'
regex=(.*)release(.*)
ignore=all

[ignore-by-author-name]
# Match commits by author name (e.g. ignore dependabot commits)
regex=dependabot
ignore=all

[title-max-length]
# Custom message for the max title length rule
line-length=72

[title-min-length]
min-length = 5

[body-max-line-length]
# Custom message for the max body line length rule
line-length=72

[body-min-length]
# Enforce a minimum length for the body to encourage detailed descriptions
min-length = 5

[body-changed-file-mention]
files=README.md
